{
  "name": "bree-ai-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "api:init-db": "bun -e \"import { initializeDatabase } from './src/db'; initializeDatabase();\"",
    "api:seed": "bun -e \"import { seedDatabase } from './src/auth'; seedDatabase();\""
  },
  "dependencies": {
    "elysia": "^1.0.0",
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "@elysiajs/jwt": "^1.0.0",
    "nats": "^2.28.2",
    "better-sqlite3": "^11.0.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/better-sqlite3": "^7.6.11",
    "@types/bcryptjs": "^2.4.6"
  }
}
